{
  "name": "ts2sol",
  "version": "0.0.1",
  "description": "A CLI tool to transpile TypeScript to Solidity",
  "main": "./lib/index.js",
  "bin": {
    "ts2sol": "./lib/index.js"
  },
  "scripts": {
    "build": "npm run clean:some && tsc -p .",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "clean:some": "rm -rf ./lib ./docs",
    "docs": "typedoc --out docs ./src",
    "global": "npm i -g && ts2sol",
    "refresh": "npm run clean:all && npm install",
    "publish-package": "npm run build && npm publish",
    "start": "npm run build && npm run global",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details"
  },
  "author": "chieze.franklin@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@types/fs-extra": "^9.0.13",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.1",
    "inquirer": "^8.2.1",
    "inversify": "^6.0.1",
    "kleur": "^4.1.4",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@liftr/tscov": "^2.0.0",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^17.0.22",
    "ts-node": "^10.7.0",
    "typedoc": "^0.22.13",
    "typescript": "^4.6.2"
  }
}
